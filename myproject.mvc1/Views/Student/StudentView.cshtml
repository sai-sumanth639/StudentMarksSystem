@model StudentMarkAutomation.Models.Student

@{
    ViewData["Title"] = "Student Mark Automation";
}
<style>
    body {
        background-image: url(https://t3.ftcdn.net/jpg/03/51/51/28/360_F_351512882_2kFH8IaSe4lyA7SXBLzEXyGKNEgbO1iH.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        font-size: 18px;
        font-weight:bold;
    }
    .row
    {
        display:block;
    }
</style>

<script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>

<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script type='text/javascript'>
    debugger;
    $(function(){
          //When the blur event occurs from your Textbox (you lose focus)
          $('#Chemistry').blur(function(){
               add();
          });
          $('#Physics').blur(function(){
               add();
          });
          $('#Maths').blur(function(){
               add();
          });
    });
    function  add()
    {
        var Maths = $('#Maths').val();
        var Physics = $('#Physics').val();
        var Chemistry = $('#Chemistry').val();
        var total = (parseFloat(Maths) + parseFloat(Physics) + parseFloat(Chemistry));
        var avg = total/3.0;
       $('#Average').val(parseFloat(avg).toFixed(2));
    }
</script>
<h3>Student Marks Automation</h3>

<hr />
<h4 style="color:indianred">Student Information:
</h4>
    <p>
    <img src="Student.png" style="height: 700px;position: absolute;left: 900px;" />
    </p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="StudentView" name="myForm">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>       

            <div class="form-group">
                <label asp-for="FirstName" style="color:black" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="John" type="text" name="FirstName" ng-model="FirstName" pattern="[A-Za-z]" required/>
                <span asp-validation-for="FirstName" class="text-danger" style="color:red" ng-show="myForm.FirstName.$dirty && myForm.FirstName.$invalid"></span>
            </div>            
            <div class="form-group">
                <label asp-for="LastName" style="color:black" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Doe" type="text" name="LastName" ng-model="LastName" pattern="[A-Za-z]" required />
                <span asp-validation-for="LastName" class="text-danger" style="color:red" ng-show="myForm.LastName.$dirty && myForm.LastName.$invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="RollNo"style="color:black" class="control-label"></label>
                <input asp-for="RollNo" class="form-control" type="text" name="RollNo" placeholder="Enter Roll number" ng-model="RollNo" required  />
                <span asp-validation-for="RollNo" class="text-danger" style="color:red" ng-show="myForm.RollNo.$dirty && myForm.RollNo.$invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" style="color:black" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="example@mail.com" type="email" name="Email" ng-model="Email" required  />
                <span asp-validation-for="Email" class="text-danger" style="color:red" ng-show="myForm.Email.$dirty && myForm.Email.$invalid"></span>
            </div>           
            <h4 style="color:indianred">Marks Obtained:
                <hr />
            </h4>       
            <div class="form-group">
                <label asp-for="Maths" style="color:black" class="control-label"></label>
                <input asp-for="Maths" class="form-control" type="number" name="Maths" ng-model="Maths" min="0" max="100" required />
                <span asp-validation-for="Maths" class="text-danger" style="color:red" ng-show="myForm.Maths.$dirty && myForm.Maths.$invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Physics" style="color:black" class="control-label"></label>
                <input asp-for="Physics" class="form-control"  type="number" name="Physics" ng-model="Physics" min="0" max="100" required />
                <span asp-validation-for="Physics" class="text-danger" style="color:red" ng-show="myForm.Physics.$dirty && myForm.Physics.$invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chemistry" style="color:black" class="control-label"></label>
                <input asp-for="Chemistry" class="form-control" type="number" name="Chemistry" ng-model="Chemistry" min="0" max="100" required  />
                <span asp-validation-for="Chemistry" class="text-danger" style="color:red" ng-show="myForm.Chemistry.$dirty && myForm.Chemistry.$invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Average" style="color:black" class="control-label"></label>
                <input asp-for="Average" class="form-control" pattern="^\d*(\.\d{0,2})?$" readonly />
                <span asp-validation-for="Average" class="text-danger"></span>
            </div>                       
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                <input type="reset" value="Reset" class="btn btn-primary btn-lg" /> 
            </div>
            <div>
                <p>@ViewBag.MessageToScreent</p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
